{
  "manifest_version": 3,
  "name": "Availability Genie – Outlook Bridge",
  "version": "1.0.0",
  "description": "Reads your Outlook Web App calendar and sends events directly to Availability Genie.",
  "permissions": [
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://outlook.office.com/*",
    "https://outlook.office365.com/*",
    "https://outlook.live.com/*",
    "https://outlook.cloud.microsoft/*",
    "https://graph.microsoft.com/*",
    "https://availability.brentwestbrook.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://availability.brentwestbrook.com/*",
        "http://localhost:*/*"
      ],
      "js": ["content-genie.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.live.com/*",
        "https://outlook.cloud.microsoft/*"
      ],
      "js": ["content-outlook-main.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://outlook.office.com/*",
        "https://outlook.office365.com/*",
        "https://outlook.live.com/*",
        "https://outlook.cloud.microsoft/*"
      ],
      "js": ["content-outlook.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Sync Outlook → Availability Genie"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
